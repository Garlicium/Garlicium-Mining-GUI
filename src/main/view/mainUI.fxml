<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.view.mainController" minWidth="900" minHeight="600" prefWidth="900" prefHeight="600" alignment="CENTER" spacing="30">
    <Label fx:id="title_label" text="GarlicGUI" textAlignment="CENTER"/>
    <ImageView fx:id="garlic_image" fitHeight="227" fitWidth="227" preserveRatio="true">
        <image>
            <Image url="@../resources/images/garlicoin.png"/>
        </image>
    </ImageView>
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="pool_url_label" text="Pool URL"/>
        <TextField fx:id="pool_textField" minWidth="400" maxWidth="400"/>
    </HBox>
    <Button text="Go" onAction="#load_pool"/>
    <stylesheets>
        <URL value="@../resources/stylesheets/main.css"/>
    </stylesheets>
</VBox>
